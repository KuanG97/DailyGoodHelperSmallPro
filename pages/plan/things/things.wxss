.swiper{
  width: 750rpx;
  height: 600rpx;
}
.title{
  font-size: 42rpx;
  color: #F9AA33;
}
.title::after{
  content: "<<";
}
.title::before{
  content: ">>";
}
.tTitle{
  color: #1FBBA6;
}
.bTitle{
  position: relative;
  top: 350rpx;
  color: #1FBBA6;
}
.swiperText{
  text-align: center;
  line-height: 100rpx;
}
.swiperImage{
  position: absolute;
  bottom: 100rpx;
  left: 0;
  display: block;
  width: 750rpx;
  height: 400rpx;
}
.swiperItem{
  position: relative;
  width: 750rpx;
}
.msgBox{
  position: relative;
  width: 650rpx;
  height: 150rpx;
  margin: 25rpx auto 0;
  background: rgba(249,170,51,0.6);
  color: #fff;
  border: dashed 1px #e3e3e3;
  border-radius: 10rpx;
  padding: 25rpx;
  display: flex;
  flex-direction: row;
}
.col{
    display: flex;
  flex-direction: column;
}
.msgTitle{
  font-weight: 600;
  height: 50rpx;
  line-height: 50rpx;
}
.msgTitle1{
  width: 300rpx;
}
.msgTitle2{
  width: 350rpx;
}
.msgInput{
  font-size: 52rpx;
  margin: 0;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
}
.msgInput1{
  width: 150rpx;
}
.msgInput2{
  width: 500rpx;
}
.msgInput text{
  line-height: 100rpx;
}
.msgInput .sText{
  font-size: 32rpx;
  line-height: 112rpx;
}
.button{
  width: 700rpx;
  margin: 25rpx auto 0;
  background:#1FBBA6 !important;
  color: #fff;
}
.alert{
  color: red;
  font-size: 24rpx;
  line-height: 50rpx;
}

.dirBox{
  width: 150rpx;
  height: 700rpx;
}
.left{
  position: absolute;
  left: 0;
  top: 0rpx;
  background: linear-gradient(to right, rgba(0, 0, 0, 0.15) , transparent); 
}
.dirBox image{
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin-top:285rpx;
}
.right{
  position: absolute;
  right: 0;
  top: 0rpx;
  background: linear-gradient(to left, rgba(0, 0, 0, 0.15) , transparent); 
}
.right image{
  position: relative;
  right: -50rpx;
}

.helpBox .help{
  position: absolute;
  top: 25rpx;
  right: 25rpx;
  width: 40rpx;
  height: 40rpx;
  color: #F9AA33;
  background: #fff;
  border-radius: 20rpx;
  text-align: center;
  font-weight: 600;
  line-height: 40rpx;
}

/* 模态框 */
.modalBg{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  z-index: 999;
}
.modalBox{
  position: relative;
  width: 640rpx;
  margin: 100rpx auto;
  padding: 40rpx;
  background: #fff;
  border-radius: 30rpx;
  z-index: 1000;
}
.modalBox .closeIcon{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
.modalBox .title{
  color: #1FBBA6;
  line-height: 90rpx;
}
.modalBox .content{
  padding: 0;
  color: #757575;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color:transparent;
}
.orange{
  color: #F9AA33;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color:transparent;
}
.orange{
  color: #F9AA33;
}
.hide{
  display: none;
}