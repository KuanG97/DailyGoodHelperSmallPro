/*计算器*/
.content{
  width: 100%;
  border-top:1px solid #ddd; 
  position: fixed;
  bottom: 0px;
  margin:0 auto;
  padding-top:10rpx;
  padding-bottom:15rpx;
}
.screen{
  width: 680rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 5rpx 15rpx;
  margin:5rpx auto;
  background: rgba(249,170,51,0.5);
  color: #757575;
  text-align: right;
  border:1px dashed #ddd;
  border-radius: 5rpx;
}
.btnGroup{
  display: flex;
  flex-direction: row;/*行布局*/
  padding: 0 15rpx 0 16rpx;
}
.item{
  width: 172rpx;
  min-height: 100rpx;
  margin:5rpx;
  text-shadow: 0 2px 2px rgba(0,0,0,0.35);
  text-align: center;
  line-height: 100rpx; 
  border-radius: 5rpx;
  border: 1px solid #0076a3;
}
.deepBule{
  background: #009883;
  color: #fff;
  border: 1px solid #009883;
}
.blue{
  background: #1FBBA6;
  color: #fff;
  border: 1px solid #1FBBA6;
}
.other-button{
  opacity: 0.7;
}
.num-button{
  opacity: 0.7;
}
.text-left{
  width: 70px;
  text-align:left;
}
.text-right{
  width: 70px;
  text-align:left;
}
.show{
  display: block;
}
.hide{
  display: none;
}
.inline{
  display: flex;
  flex-direction: row;
}
.inline .text{
  width: 125rpx;
}
.inline input{
  margin: 0;
}
.picker{
  font-size: 24rpx;
  line-height: 40rpx;
}

.btnHide{
  height: 84rpx;
  border: 0px;
  border-radius: 0;
  border-bottom: 1px #e3e3e3 dashed;
  background: #fff !important;
  margin: 0;
}
.btnHide image{
  width: 70rpx;
  height: 70rpx;
}