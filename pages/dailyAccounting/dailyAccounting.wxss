/*页面偏移*/
.page {  
  margin-left: 40rpx;  
  margin-right:40rpx; 
  background: #fff;
}  
.content{
  padding: 0;
  background: #fff;
}
button{
  border: 0px solid #fff;
}
/*背景*/
.swiper-tab0{
  display:flex; 
  flex-direction:row;
  position: relative;
  top:20px;
  line-height:100rpx;  
  background:#fff;
}

/*响应组件*/
.swiper-tab { 
  margin-left:100rpx; 
  margin-right:100rpx;
  display:flex; 
  flex-direction:row;
  line-height:80rpx;  
  background:#f5f5f5;
  border:3rpx solid #f5f5f5;
  border-radius:20px;
}  

/*文字*/
.tab-item { 
  width:50%;  
  text-align:center;  
  font-size: 15px;  
  color:#fff;  
}

/*展示框*/
.swiper {  
   position: relative;
   top: 50rpx;
  height: 1450rpx;  
  background: #fff;  
}  

/*左按钮-初态*/
.left{
  margin-left:100rpx; 
  color: #1FBBA6;
  background:#fff; 
  border-top-left-radius:20px;
  border-bottom-left-radius:20px;
  border:3rpx solid #1FBBA6;
  line-height:60rpx;
}

/*右按钮-初态*/
.right{
  
  margin-right:100rpx; 
  color: #1FBBA6;
  background: #fff;
  border-top-right-radius:20px;
  border-bottom-right-radius:20px; 
  border:3rpx solid #1FBBA6;
  line-height:60rpx;
}

/*左-点击*/
 .on-left{  
  margin-left:100rpx; 
  color: #fff;
  background: #F9AA33; 
  border-top-left-radius:20px;
  border-bottom-left-radius:20px;  
  line-height:60rpx;
}  

/*右-点击*/
.on-right{ 
  
  margin-right:100rpx;  
  color: #fff;
  background: #F9AA33; 
  border-top-right-radius:20px;
  border-bottom-right-radius:20px;  
  line-height:60rpx;
}  


