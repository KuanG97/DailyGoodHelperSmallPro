@import "../../clac/index/index.wxss";
page{
  background: #eee;
}
.content{
  background: #fff;
}
.thingCard{
  position: relative;
  width: 650rpx;
  height: 220rpx;
  margin: 35rpx auto 118rpx;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-bottom-left-radius: 0rpx;
  border-bottom-right-radius: 0rpx;
  font-weight: 100;
  padding: 20rpx;
}
.circle{
  width: 28rpx;
  height: 28rpx;
  border-radius: 14rpx;
  background: #eee;
  z-index: 999;
}
.helpIcon{
  position: absolute;
  width: 42rpx;
  height: 42rpx;
  top: 32rpx;
  right: 25rpx;
}
.left{
  position: absolute;
  left: -14rpx;
  bottom: -14rpx;
}
.right{
  position: absolute;
  right: -14rpx;
  bottom: -14rpx;
}
.tTitle{
  text-align: center;
  color: #1FBBA6;
  font-weight: 600;
  font-size: 40rpx;
  line-height: 80rpx;
}
.row{
  width: 650rpx;
  display: flex;
  font-size: 28rpx;
  flex-direction: row;
}
.col{
  width: 325rpx;
  display: flex;
  flex-direction: column;
}
.colHr{
  width: 0;
  border-left: #757575 dashed 1px;
}
.hr{
  width: 650rpx;
  margin: 25rpx auto 25rpx;
  border-bottom: #1FBBA6 dashed 1px;
}
.textTndent{
  text-indent:16rpx;
}
.btn{
  position: absolute;
  width: 690rpx;
  height: 88rpx;
  bottom: -88rpx;
  left: 0;
  border-top-left-radius: 0rpx;
  border-top-right-radius: 0rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  background:#F9AA33;
  color: #fff;
  line-height: 88rpx;
  font-weight: 600;
}
.red{
  color: #FF4367;
}
.green{
  color: #84AE9D;
}
.Bmsg{
  line-height: 70rpx;
  font-weight: 300;
}
.hidden{
  display: none;
}
.none{
  color: #757575;
  text-align: center;
  font-size: 28rpx;
  line-height: 100rpx;
}
.helpBox{
  width: 680rpx;
  height: 50rpx;
  position: relative;
}
.helpBox .help{
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  background: #F9AA33;
  border-radius: 20rpx;
  text-align: center;
  font-weight: 600;
  line-height: 40rpx;
}
.helpBox .modal{
  height: 30rpx;
  position: absolute;
  top: 0;
  right: 55rpx;
  font-size: 22rpx;
  padding: 3rpx 20rpx;
  font-weight: 100;
  border: 1px solid #F9AA33;
  color: #F9AA33;
  border-radius: 8rpx;
}
.helpBox .triangle{
  width:0;
  height: 0;
  position: absolute;
  bottom: 0rpx;
  right: -12px;
  font-weight: 100;
  border-left: 6px solid #F9AA33;
  border-top: 6px solid #fff;
  border-bottom: 6px solid #fff;
  border-right: 6px solid #fff;
}

/* 模态框 */
.modalBg{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  overflow: hidden;
  z-index: 999;
}
.modalBox{
  position: relative;
  width: 640rpx;
  margin: 100rpx auto;
  padding: 60rpx 40rpx 40rpx;
  background: #fff;
  border-radius: 30rpx;
  z-index: 1000;
}
.modalBox .closeIcon{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 1005;
}
.modalBox .title{
  color: #1FBBA6;
  line-height: 90rpx;
}
.modalBox .content{
  padding: 0;
  color: #757575;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color:transparent;
}
.orange{
  color: #F9AA33;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color:transparent;
}
.orange{
  color: #F9AA33;
}
.hide{
  display: none;
}